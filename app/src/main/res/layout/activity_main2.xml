<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capturar Datos"
        android:textSize="25dp"
        android:id="@+id/capturarDatos"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor:"
        android:textSize="25dp"
        android:id="@+id/etiquetaValor"
        android:layout_below="@id/capturarDatos"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        />
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_toRightOf="@+id/etiquetaValor"
        android:layout_below="@id/capturarDatos"
        android:layout_marginTop="25dp"
        android:id="@+id/valor"
        android:layout_marginLeft="25dp"
        android:inputType="number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Columnas:"
        android:textSize="25dp"
        android:id="@+id/etiquetaColumna"
        android:layout_below="@id/etiquetaValor"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/columna"
        android:layout_toRightOf="@+id/etiquetaColumna"
        android:layout_below="@id/valor"
        android:inputType="number"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renglon:"
        android:textSize="25dp"
        android:id="@+id/etiquetaRenglon"
        android:layout_below="@id/etiquetaColumna"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/camprenglon"
        android:layout_toRightOf="@+id/etiquetaRenglon"
        android:layout_below="@id/columna"
        android:inputType="number"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCapturar"
        android:text="Capturar"
        android:layout_below="@id/etiquetaRenglon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegresar"
        android:text="regresar"
        android:layout_below="@id/etiquetaRenglon"
        android:layout_toRightOf="@+id/btnCapturar"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio2"
        android:layout_below="@+id/btnCapturar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archivo 1"
            android:textSize="25dp"
            android:id="@+id/archivo1"
            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archivo 2"
            android:textSize="25dp"
            android:checked="true"
            android:id="@+id/archivo2"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archivo 3"
            android:textSize="25dp"
            android:id="@+id/archivo3"/>

    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnArchivar"
        android:text="Archivar"
        android:layout_below="@id/btnRegresar"
        android:layout_toRightOf="@+id/radio2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        />
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/radio2"
        android:background="#757575"
        >
    </GridLayout>






</RelativeLayout>